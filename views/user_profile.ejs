<!-- template to display user details with option to reset password and update user name -->
<% if(user.id==profile_user.id) { %>
<div class="card" style="width: 450px;">
  <div class="card-body">
    <h5 class="card-title">Update Profile</h5>
   
    <p class="card-text">
      <!-- form to send updated user info to controller action to change in db -->
        <form action="/update/<%=profile_user.id %>" method="post">


           <div class="form-group">
    <label for="exampleInputname">Name</label>
    <input type="text" class="form-control" name="name" placeholder="your name" id="exampleInputname" value="<%= profile_user.name%>"  required >
  </div>

  <div class="form-group">

    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" name="email" value="<%= profile_user.email%>" aria-describedby="emailHelp" placeholder="Email" id="exampleInputEmail1" disabled>
    <small id="emailHelp" class="form-text text-muted">You can't change your email address.</small>
  </div>
   <h6 class="card-subtitle mb-2 text-muted">Reset your Password</h6>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" name="password" placeholder="password" id="exampleInputPassword1" required >
  </div>
   <div class="form-group">
    <label for="exampleInputPassword2"> Confirm Password</label>
  
     <input
    type="password"
    class="form-control"
    name="confirm_password"
    id="exampleInputPassword2"
    placeholder="confirm Password"
    required
  />
  </div>
  <button type="submit" class="btn btn-info">Update</button>
</form>
    </p>
   
  </div>
</div>
<!--checking if user is same as logged in to avoid update by other users -->
<%} else { %>
<!-- else show only the profile info -->
<p><%=profile_user.name%></p>
<p><%=profile_user.email%></p>
<%}%>





